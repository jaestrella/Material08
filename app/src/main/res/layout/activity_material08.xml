<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iesvirgendelcarmen.dam.material08.material08"
    android:background="#2ccfe1">

    <android.support.v7.widget.CardView
        android:id="@+id/tarjeta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cuadro2"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EL RAPTO DE LAS SABINAS"
            android:layout_gravity="bottom"
            android:textColor="#060679"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#8c8fa6dc"/>

        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JACQUES-LOUIS DAVID"
            android:gravity="top"
            android:textColor="#ff00"
            android:background="#8c8fa6dc"
            android:textAlignment="center"
            android:textSize="15dp"/>


    </android.support.v7.widget.CardView>



</LinearLayout>
